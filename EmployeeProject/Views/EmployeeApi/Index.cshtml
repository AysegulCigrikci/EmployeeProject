@model List<EmployeeProject.Controllers.EmployeeApiController.ClassEmp1>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Personel Listesi</h1> <a href="/EmployeeApi/AddEmployee/" class="btn btn-outline-primary">Personel Ekle</a>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Cinsiyet</th>
        <th>Doğum Tarihi</th>
        <th>Email</th>
        <th>Telefon numarası</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @if (Model==null)
    {   
        <tr>
            <td colspan="4"> Herhangi bir veri alınamadı </td>
        </tr>
    }
    else
    { 
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmployeeID</td>
            <td>@item.EmployeeName</td>
            <td>@item.EmployeeSurname</td>
            <td>@item.EmployeeGender</td>
            <td>@item.EmployeeBirthDate</td>
            <td>@item.EmployeeEmail</td>
            <td>@item.EmployeePhoneNumber</td>
            <td><a href="/EmployeeApi/DeleteEmployee/@item.EmployeeID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/EmployeeApi/EditEmployee/@item.EmployeeID" class="btn btn-outline-danger">Düzenle</a></td>
        </tr>
    }
    }
</table>



