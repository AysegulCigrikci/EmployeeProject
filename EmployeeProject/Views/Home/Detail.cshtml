@model IEnumerable<EntityLayer.Concrete.Employee>

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Personel Detay</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Adı</th>
            <th scope="col">Soyadı</th>
            <th scope="col">Cinsiyet</th>
            <th scope="col">Doğum Tarihi</th>
            <th scope="col">Email</th>
            <th scope="col">Telefon Numarası</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row"> @item.EmployeeID</th>
            <td>@item.EmployeeName</td>
            <td>@item.EmployeeSurname</td>
            <td> @item.EmployeeGender</td>
            <td> @(((DateTime)item.EmployeeBirthDate).ToString("dd.MM.yyyy"))</td>
            <td>@item.EmployeeEmail</td>
            <td>@item.EmployeePhoneNumber</td>
        </tr>
        }
    </tbody>
</table>


